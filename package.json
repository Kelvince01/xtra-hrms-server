{
  "name": "xtra-hrms-server",
  "version": "1.0.0",
  "description": "Xtra HRMS Express Server API",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/server.js",
    "dev:": "nodemon src/server.ts",
    "dev:init": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\" \"nodemon -x tsoa spec\"",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
    "test": "npm test",
    "lint": "npx eslint . --ext .ts",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "swagger": "tsoa spec"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kelvince01/xtra-hrms-server.git"
  },
  "keywords": [
    "Xtra",
    "HRMS",
    "Express",
    "MySQL",
    "NodeJS",
    "API"
  ],
  "author": "Kelvince Phillips",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kelvince01/xtra-hrms-server/issues"
  },
  "homepage": "https://github.com/Kelvince01/xtra-hrms-server#readme",
  "dependencies": {
    "@google-ai/generativelanguage": "^1.1.0",
    "@types/express-validator": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
